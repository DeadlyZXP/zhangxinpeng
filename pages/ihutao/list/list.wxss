.list-body {
  width: 100%;
  height: 100%;
  display: flex;
}
.list-body .list-left {
  width: 22%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.list-body .list-left li {
  width: 100%;
  height: 14%;
  border-top: solid 0.5px white;
  background: #e51755;
  text-align: center;
  font-size: 16px;
  color: white;
  line-height: 60px;
}
.list-body .list-left .active{
  color: #e51755;
  background: white;
}
.list-body .list-right {
  width: 78%;
}
.list-right .listTop{
  display: flex;
  width: 100%;
  height: 40px;
  background: black;
  color: white;
  justify-content: space-around;

}
.listTop p{
  display: block;
  width: 70%;
  height: 100%;
  text-align: center;
  line-height: 40px;
}
.listTop image{
  width: 10%;
  height: 30px;
  margin-top: 5px;
}
.list{
  width: 96%;
  padding: 2%;
  display: flex;
  height: auto;
  flex-wrap: wrap;
  justify-content: space-between;
}
.list li{
  width: 29%;
  height: 100px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 12px;
  text-align: center;
}
.list li div{
  display: block;
  width: 100%;
  height: 80px;
  border-radius: 100%;
  border: 0.5px solid red;
  overflow: hidden;
}
.list li div image{
  width: 100%;
  height: 100%;
}
page {
  height: 100%;
}
